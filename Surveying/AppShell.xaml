<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Surveying.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Surveying.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Surveying">

    <!-- Main Page -->
    <ShellContent
        Title="Survey List"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="home.png" />

    <!-- Cleaning List Page -->
    <ShellContent
        Title="Cleaning List"
        ContentTemplate="{DataTemplate local:CleaningList}"
        Route="CleaningList"
        Icon="cleaning.png" />

</Shell>